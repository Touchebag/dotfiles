#!/bin/bash

VOL=`amixer get Master | awk 'FNR == 5 {print $4}' | tr -d '[]%'`
MUTE=`amixer get Master | awk 'FNR == 5 {print $6}' | tr -d '[]'`

icon="ÓÅê"

fullcolor="^fg(#cc6666)"
emptycolor="^fg(#425059)"

bar=""
case $VOL in
	100)
		bar="---------"
		;;
	0)
		bar="$emptycolor---------"
		;;
	[1-5])
		bar="$emptycolor---------"
		;;
	[5-9])
		bar="-$emptycolor--------"
		;;
	[1-2]*)
		bar="--$emptycolor-------"
		;;
	3*)
		bar="---$emptycolor------"
		;;
	4*)
		bar="----$emptycolor-----"
		;;
	5*)
		bar="-----$emptycolor----"
		;;
	6*)
		bar="------$emptycolor---"
		;;
	7*)
		bar="-------$emptycolor--"
		;;
	8*)
		bar="--------$emptycolor-"
		;;
	*)
		bar="---------"
		;;
esac

if [[ $VOL = 0 ]]; then
	icon="^i(/home/robin/scripts/icons/vol_0.xbm)"
elif [[ $VOL -lt 50 ]]; then
	icon="^i(/home/robin/scripts/icons/vol_50.xbm)"
else
	icon="^i(/home/robin/scripts/icons/vol_100.xbm)"
fi

if [[ $MUTE = "off" ]]; then
	icon="^fg(#cc0000)$icon"
else
	icon="^fg()$icon"
fi

echo "$icon $fullcolor$bar"
