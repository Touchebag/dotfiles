#!/bin/bash

# Temperature of each CPU core
# CPU1=`sensors | awk 'FNR == 3 {print $3}' | tr -d '.+째C'`
# CPU2=`sensors | awk 'FNR == 4 {print $3}' | tr -d '.+째C'`
temp=`sensors | awk 'FNR == 7 {print $4}' | tr -d '.0+째C'`

# Set the icon and deafult colour
icon="^i(/home/robin/scripts/icons/temp.xbm)"
color="^fg()"

# Calculate the average temperature of both cores

# Change colour depending on temperature
if (($temp >= 80)); then
   color="^fg(#cc0000)"
elif (($temp >= 70)); then
   color="^fg(#aa5500)"
elif (($temp >= 60)); then
   color="^fg(#aaaa00)"
fi

# Output
echo "$icon $color$temp째C"
